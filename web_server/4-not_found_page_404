#!/usr/bin/env bash
# Configuring Nginx server to have a custom 404 page containing the string "Ceci n'est pas une page"

# Update package repositories and install Nginx
sudo apt-get update
sudo apt-get install -y nginx

# Create index.html with sample content
echo "Holberton School" | sudo tee /var/www/html/index.html > /dev/null

# Create custom 404 page
echo "Ceci n'est pas une page" | sudo tee /var/www/html/404.html > /dev/null

# Configure Nginx for custom 404 page
sudo bash -c 'cat << EOF > /etc/nginx/sites-available/default
server {
    listen 80 default_server;
    root /var/www/html;
    index index.html index.htm;
    server_name _;

    error_page 404 /404.html;
    location = /404.html {
        internal;
    }
}
EOF'

# Test Nginx configuration syntax
sudo nginx -t

# Restart Nginx to apply changes
sudo service nginx restart

